{
  "manifest_version": 2,
  "name": "Rabbit Hole [TS]",
  "version": "1.0",
  "description": "An extension to map your journey as you down the Wikipedia Rabbit Hole",
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": ["storage", "webNavigation", "tabs"],
  "browser_action": {
    "default_title": "Rabbit Hole"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://unpkg.com; object-src 'self'"
}
